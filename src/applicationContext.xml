<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
        default-init-method="miInit" default-destroy-method="miEnd">

    <bean id="parenttriangle" class="com.ayscom.prueba.Triangle" abstract="true" >
        <property name="pointLists">
            <list>
                <ref bean="pointA"></ref>
                <ref bean="pointB"></ref>
            </list>
        </property>
    </bean>
    <bean id="triangle1" class="com.ayscom.prueba.Triangle" parent="parenttriangle">
        <property name="pointLists">
            <list merge="true">
                <ref bean="pointC"></ref>
            </list>
        </property>
    </bean>
    <bean id="pointB" class="com.ayscom.prueba.Point">
        <property name="x" value="${pointA.pointX}"></property>
        <property name="y" value="${pointB.pointX}"></property>
    </bean>
    <bean id="pointC" class="com.ayscom.prueba.Point">
        <property name="x" value="20"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="pointA" class="com.ayscom.prueba.Point">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>

    <!--<bean class="com.ayscom.prueba.DisplayNameBeanPostProcessor"></bean>-->

    <bean class="com.ayscom.prueba.MyBeanFactoryPP"></bean>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="pointsconfig.properties"></property>
    </bean>

    <bean id="circle" class="com.ayscom.prueba.Circle">
        <property name="center" ref="pointA"></property>
    </bean>
    <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"></bean>
    <!--<alias name="triangle" alias="triangle-alias"></alias>-->

</beans>