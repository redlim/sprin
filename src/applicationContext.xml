    <bean id="point2" class="com.ayscom.prueba.Point">
        <property name="x" value="20"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="point3" class="com.ayscom.prueba.Point">
        <property name="x" value="20"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="zeroPoint" class="com.ayscom.prueba.Point">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>

    <alias name="triangle" alias="triangle-alias"></alias>

</beans>