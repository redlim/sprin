<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
        default-init-method="miInit" default-destroy-method="miEnd">

    <bean id="parenttriangle" class="com.ayscom.prueba.Triangle" abstract="true" >
        <property name="pointLists">
            <list>
            <ref bean="pointA"></ref>
            </list>
        </property>
    </bean>
    <bean id="triangle1" class="com.ayscom.prueba.Triangle" parent="parenttriangle">
        <property name="pointLists">
            <list merge="true">
                <ref bean="pointB"></ref>
            </list>
        </property>
    </bean>
    <bean id="triangle2" class="com.ayscom.prueba.Triangle" parent="parenttriangle">
        <property name="pointC" ref="pointB"></property>
    </bean>


